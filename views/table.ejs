<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Multiplication Table</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-black text-white">
    <div class="container py-5">
      <!-- Heading -->
      <h1 class="text-center mb-4 text-white">Multiplication Table Generator</h1>

      <!-- Form Card -->
      <div class="card bg-white text-black shadow mb-5 border-0">
        <div class="card-body">
          <form action="/" method="GET" class="row g-3">
            <div class="col-md-6">
              <label for="number" class="form-label">Table Number</label>
              <input type="number" name="number" id="number" class="form-control" required />
            </div>
            <div class="col-md-6">
              <label for="length" class="form-label">Length</label>
              <input type="number" name="length" id="length" class="form-control" required />
            </div>
            <div class="col-12 text-end">
              <button type="submit" class="btn btn-dark px-4 mt-2">Generate Table</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Table Output -->
      <% if (tablePrepare) { %>
        <div class="card bg-white text-black shadow border-0">
          <div class="card-body">
            <h4 class="mb-3">Generated Table:</h4>
            <ul class="list-group list-group-flush">
              <% tablePrepare.forEach(function(table) { %>
                <li class="list-group-item"><%= table %></li>
              <% }) %>
            </ul>
          </div>
        </div>
      <% } %>
    </div>
  </body>
</html>
